<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- carpooling.wizard form view -->
    <record id="carpooling.wizard_view_form" model="ir.ui.view">
        <field name="name">carpooling.wizard.view.form</field>
        <field name="model">carpooling.wizard</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="departure_city"/>
                        <field name="destination_city"/>
                        <field name="departure_date"/>
                    </group>
                    <footer>
                        <button string="Search" type="object" name="search_trip" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
    <!-- carpooling.wizard action window -->
<record id="carpooling.wizard_action" model="ir.actions.act_window">
    <field name="name">carpooling.wizard.action</field>
    <field name="res_model">carpooling.wizard</field>
    <field name="view_mode">form</field>
     <field name="target">new</field>
</record>

</odoo>
























